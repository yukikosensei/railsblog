
<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <% @articles.each do |article| %>
        <p class="title"><%= article.title %></p>
        <div class="body"><%= article.body %></div>        
      <% end %>

      <div class="d-flex justify-content-center">
        <%= paginate @articles %>
      </div>
    </div>
    <div class="col-sm">
    ⭐︎Recent articles⭐︎
      <% @recent_articles.each do |article| %>
        <div class="title">
          <%= link_to article.title, article_path(article) %>
        </div>
      <% end %>
    </div>
  </div>
</div>



